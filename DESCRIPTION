Package: cry
Type: Package
Title: Statistics for Structural Crystallography
Version: 0.5.2
Date: 2025-06-18
Authors@R: c(
	person("James","Foadi",email="james_foadi@yahoo.co.uk",role=c("aut","cre")),
	person("David","Waterman",email="david.waterman@stfc.ac.uk",role="aut"),
